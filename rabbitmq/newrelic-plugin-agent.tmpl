%YAML 1.2
---
Application:
  license_key: __NR_KEY__
  wake_interval: 30

  rabbitmq:
    - name: __SCOPE__-__VHOST__@localhost
      host: 127.0.0.1
      port: __PORT__
      username: __USER__
      password: __PASSWD__
      vhosts:
       __VHOST__:

Daemon:
  user: newrelic
  pidfile: /dev/shm/newrelic-plugin-agent.pid

Logging:
  formatters:
    verbose:
      format: '%(levelname) -10s %(asctime)s %(process)-6d %(processName) -15s %(threadName)-10s %(name) -45s %(funcName) -25s L%(lineno)-6d: %(message)s'
  handlers:
    file:
      class : logging.handlers.RotatingFileHandler
      formatter: verbose
      filename: /tmp/nr.log
      maxBytes: 10485760
      backupCount: 3
  loggers:
    newrelic_plugin_agent:
      level: INFO
      propagate: True
      handlers: [console]
    requests:
      level: ERROR
      propagate: True
      handlers: [console]

